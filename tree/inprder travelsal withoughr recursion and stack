#include<iostream.h>
#include<conio.h>
struct tree
{
  int info;
  struct tree *left,*right;
}

/*
1. Initialize current as root 
2. While current is not NULL
   If current does not have left child
      a) Print currentâ€™s data
      b) Go to the right, i.e., current = current->right
   Else
      a) Make current as right child of the rightmost node in current's left subtree
      b) Go to this left child, i.e., current = current->left
*/


        

//inorde simple
void inorderS(struct tree *root)
{
  struct tree *current , *pre;
  current = root;
  while(current!=NULL)
  {
    if(current->left!=NULL);
    {
      cout<<current->info;
      current=current->right;
    }
    else
    {
      pre=
    }
  }
}


//function to find diameter of an algorithm
int diameter(struct tree *root,depth,maxdepth)
{
  if(root->let!=NULL)
  {
    depth++;
    if(maxdepth<depth)
    maxdepth=depth;
    diameter(root->left,depth,maxdepth)
  }
  else 
  {
    depth--;
    if(root->let!=NULL)
    {
      depth++;
      if(maxdepth<depth)
      maxdepth=depth;
      diameter(root->left,depth,maxdepth)
    }
    else
      depth--;
  }
  return maxdepth;
}



//function for postorder traversal
void inorder(struct tree * newtree)
{
  inorder(newtree->left);
  inorder(newtree->left);
  cout<<newtree->info<<endl;
}



//funtion for preorder traversal
void inorder(struct tree * newtree)
{
  cout<<newtree->info<<endl;
  inorder(newtree->left);
  inorder(newtree->left);
}




//funtion for inorder traversal
void inorder(struct tree * newtree)
{
  
  inorder(newtree->left);
  cout<<newtree->info<<endl;
  inorder(newtree->left);
}

//function to add node
void add(struct tree * TREE,int flag)
{
    struct tree *newtree=(struct tree *)malloc(sizeof(struct tree));
    newtree->right=NULL;
    newtree->left=NULL;
    if(TREE!=NULL)
    {
      if(flag)
        TREE->right=newtree;
      else
        TREE->left=newtree;
    }
}





void main()
{
  struct tree *newtree=NULL;
  add(newtree,1);
  add(newtree,1);
  add(newtree,0);
  add(newtree->left,1);
  add(newtree->left,0);
  inorder(newtree);
  preorder(newtree);
  postorder(newtree);
  cout<<endl<<diameter(newtree,1,0);
  getch();
}
